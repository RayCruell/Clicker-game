<Window x:Class="Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor_v0.1" Height="525" Width="900" MouseDown="Window_MouseDown">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список врагов + кнопки -->
        <StackPanel Grid.Column="0" Margin="0,0,8,0">
            <TextBlock Text="List of enemies:" FontSize="18" FontWeight="Bold" Margin="2" HorizontalAlignment="Center"/>
            <ListBox x:Name="EnemiesListBox"
                     Height="395"
                     Margin="0,4,0,8"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" FontSize="18" Width="80" Margin="0,0,8,0" Height="33"/>
                <Button Content="Load" FontSize="18" Width="80" Height="33"/>
            </StackPanel>
        </StackPanel>

        <!-- Центр: иконка + поля -->
        <Grid Grid.Column="1" Margin="8,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="167"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Canvas x:Name="scene" Grid.Row="1" Grid.Column="1" Background="Transparent" Margin="10,0,10,0" />


            <!-- Иконка врага слева, имя иконки и имя врага справа от неё -->
            <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Height="172" Width="150">
                <TextBlock Text="Enemy icon:" FontWeight="Bold" FontSize="18" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                <Border BorderBrush="Gray" BorderThickness="1"
                        Width="120" Height="120" Background="White">
                    <Image x:Name="SelectedEnemyIcon" Stretch="Uniform" Margin="-1,-1,-1,-1"/>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Height="120" Margin="0,0,25,0">
                <TextBlock Text="Icon name:" HorizontalAlignment="Center"  FontSize="18" Margin="0,0,0,2"/>
                <TextBox x:Name="IconNameBox" Width="220" Height="18" Margin="0,0,0,8"/>
                <TextBlock Text="Enemy Name:" HorizontalAlignment="Center" FontSize="18" Margin="0,0,0,2"/>
                <TextBox x:Name="EnemyNameBox" Width="220"/>
            </StackPanel>

            <!-- Параметры врага: надписи сверху, элементы по центру -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="220" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="160">
                    <TextBlock Text="Base life:" Margin="0,0,0,2" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBox x:Name="BaseLifeBox" Width="160" HorizontalAlignment="Center"/>
                    <TextBlock Text="Life modifier:" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBox x:Name="LifeModifierBox" Width="160" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="160">
                    <TextBlock Text="Base gold:" Margin="0,0,0,2" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBox x:Name="BaseGoldBox" Width="160" HorizontalAlignment="Center"/>
                    <TextBlock Text="Gold modifier:" FontSize="18" HorizontalAlignment="Center"/>
                    <TextBox x:Name="GoldModifierBox" Width="160" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- В самом низу: шанс спавна и кнопки Add/Remove -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0" Width="398">
                <StackPanel Orientation="Vertical" Margin="0,0,24,0" Width="201">
                    <TextBlock Text="Spawn chance (1-100):" FontSize="18" Width="200"/>
                    <TextBox x:Name="SpawnChanceBox" Width="200" Height="17"/>
                </StackPanel>
                <Button Content="Add" FontSize="18" Width="80" Margin="0,0,8,0" Height="33"/>
                <Button Content="Remove" FontSize="18" Width="80" Height="33"/>
            </StackPanel>
        </Grid>

        <!-- Пролистываемые иконки справа (2 иконки в ряд) -->
        <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="IconsPanel">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Viewbox Width="100" Height="100" Margin="4">
                                        <Button Click="IconButton_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0">
                                            <Image Source="{Binding ImagePath}" 
                                   Stretch="Uniform"
                                   SnapsToDevicePixels="True"/>
                                        </Button>
                                    </Viewbox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>